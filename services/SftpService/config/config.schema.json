{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"clients": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"sites": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"username": {
						"type": "string"
					},
					"password": {
						"type": "string"
					}
				},
				"required": [ "username", "password" ]
			}
		},
		"defaultPassword": {
			"type": "string"
		}
	},
	"required": [ "clients", "sites", "defaultPassword" ]
}
